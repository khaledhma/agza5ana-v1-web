{
  "rules": {
    "medicineInfo": {
      ".read": true,
      ".write": true
    },
    "medicineBarcode": {
      ".read": true,
      ".write": true
    },
 		"medicineName": {
      ".read": true,
      ".write": true
    },
 		"medicineNameArabic": {
      ".read": true,
      ".write": true
    },
 		"orders": {
      ".read": true,
      ".write": true,
      ".indexOn": "orderSenderId"
    },
 		"users": {
      "$uid": {
        ".write": "auth != null && $uid === auth.uid",
        ".read": "auth != null && $uid === auth.uid"
      }
    }
  }
}
